<?xml version="1.0" encoding="utf-8"?>
<!-- Blossom Adaptive Icon Background -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- Beautiful gradient background for adaptive icon -->
    <path
        android:pathData="M0,0h108v108h-108z">
        <aapt:attr name="android:fillColor" xmlns:aapt="http://schemas.android.com/aapt">
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#F8F9FA"
                android:endColor="#E6E6FA"
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="60" />
        </aapt:attr>
    </path>
    
    <!-- Subtle zen circle in background -->
    <circle
        android:cx="54"
        android:cy="54"
        android:radius="35"
        android:strokeWidth="2"
        android:strokeColor="#E6E6FA"
        android:strokeAlpha="0.3"
        android:fillColor="android:color/transparent" />
        
</vector>
